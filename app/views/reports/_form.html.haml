
= form_for @report, :html => { :multipart => true } do |f|

  - if @report.errors.any?
    #error_explanation
      %h3= t('e.there_are_errors')

      %ul
        - @report.errors.full_messages.each do |msg|
          %li= msg

  .actions.top
    = f.submit t('g.create')
  
  .row= f.text_field :name, :class => 'name'
  .row= f.text_area :subhead, :class => 'subhead'

  .check
    = f.label :is_done
    = f.check_box :is_done

  .check
    = f.label :is_public
    = f.check_box :is_public

  .row= f.text_area :descr, :class => 'tinymce'
  
  .field
    = f.label t('cities.one')
    = select :report, :city, @cities

  .field
    = t('g.coords')
    %br
    = f.text_field :x
    = f.text_field :y

  - if @current_user.blank?
    .row
      %p= t('g.captcha_explanation')
      = recaptcha_tags

  .actions.bottom
    = f.submit t('g.create')
