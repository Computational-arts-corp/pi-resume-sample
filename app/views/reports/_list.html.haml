
- n_ads ||= 2

.reports-list
  - reports.each_with_index do |report, idx|
    - if idx > 1 && n_ads > 0
      - if 1 == rand(3)
        - n_ads = n_ads - 1
        .center.item= render 'ads/large_rectangle_gray-blue-dark'

    = render 'reports/item', :report => report

  .clear

  = paginate reports, :param_name => :reports_page