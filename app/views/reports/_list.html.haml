
.reports-list
  - reports.each do |report|
    .item
      %h2= link_to report.name.titleize, report_path(report.name_seo)
      - unless report.photo.blank?
        = link_to image_tag(report.photo.photo.url(:thumb), :alt => ''), report_path(report.name_seo)

      = render 'reports/meta', :report => report
      .subhead= report.subhead

      .clear
  .clear

= paginate reports, :param_name => :reports_page