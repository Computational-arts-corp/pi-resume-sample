
- local_report_path ||= report_path(report.name_seo)

.item
  %h2= link_to report.name.titleize, local_report_path
  = render 'meta', :report => report, :idx => idx ||= nil
  - unless report.photo.blank?
    .thumb= link_to image_tag(report.photo.photo.url(:thumb), :alt => ''), report_path(report.name_seo)
  .subhead= report.subhead
  .clear