
= content_for :left_menu do
  %ul.menu
    %li= link_to 'Discussion', 'javascript:void(0);', :class => :duscussion_link
    %li= link_to 'Recommended', 'javascript:void(0);', :class => :recommended_link
    %li.hide= link_to 'Author', 'javascript:void(0);'

= content_for :right_menu do
  -#

= content_for :right do
  .a
    .center
      = render 'ads/large_rectangle'
    &nbsp;
    .discussion
      = render 'disqus'

= content_for :left do
  .reports-show
    %h2= @report.name

    .suhbead
      = @report.subhead

    - unless @report.photo.blank?
      .image
        = image_tag @report.photo.photo.url(:small)

    .clear
    .center= render 'ads/large_rectangle'
    .clear

    .descr
      = raw @report.descr

    .clear
    .center= render 'ads/large_rectangle'
    .clear

    .share_this
      = render 'share_this'

    .recommended

