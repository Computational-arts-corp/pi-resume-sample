
.gallery-show
  .title
    %h1
      Gallery
      = @gallery.name.titleize

  .items
    - @gallery.photos.fresh.each_with_index do |photo, idx|
      = render 'photos/present_individual', :photo => photo, :idx => idx

    .item
      .new-photo= link_to image_tag('icons/64x64/new_photo.png'), new_photo_for_gallery_path(@gallery.id)

  .clear
  = render 'share_this'

  .clear
  &nbsp;
  .center= render 'ads/leaderboard'
  &nbsp;

  .clear
  = render 'disqus'