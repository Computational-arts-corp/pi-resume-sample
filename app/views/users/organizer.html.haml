

.scratchpad
  = form_for @current_user, :url => scratchpad_path do |f|
    %fieldset
      .scratchpad-content
        = f.text_area :scratchpad
        = f.submit 'Update Scratchpad'

.clear.crud
  = form_tag search_days_path do
    %fieldset
      = text_field_tag 'date', nil, :placeholder => 'YYYY-MM-DD'
      = submit_tag t('g.search'), :class => :search

  = form_tag my_search_reports_path do
    %fieldset
      = text_field_tag 'keyword', nil, :placeholder => t('g.report')
      = submit_tag t('g.search'), :class => :search
      = link_to image_index, my_reports_path
      = link_to image_new, new_report_path

  = form_tag search_galleries_path do
    %fieldset
      = text_field_tag 'search_keyword', nil, :placeholder => t('g.gallery')
      = submit_tag t('g.search'), :class => :search
      = link_to image_index, my_galleries_path
      = link_to image_new, new_gallery_path

  = form_for @addressbookitem, :url => addressbookitems_path do |f|
    %fieldset
      = f.text_field :name, :placeholder => t('g.addressbookitem')
      = f.submit t('g.search'), :class => :search
      = link_to image_index, addressbookitems_path
      = link_to image_new, new_addressbookitem_path

.newsitems
  = render 'newsitems/list', :newsitems => @newsitems
  
        