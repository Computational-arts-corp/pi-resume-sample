
.galleries--list
  - @galleries.each do |g|
    .item
      %h5= link_to g.name, user_gallery_path(g.galleryname)
      - unless g.photos.public.length == 0
        = link_to image_tag(g.photos.public[0].photo.url(:thumb)), user_gallery_path(g.galleryname)
  - if 0 == @galleries.length
    = t('galleries.no_galleries')
