
-##
-## venue/show
-##
- content_for :title do
  = @venue.name

.venue-header

  .logo
    - if @venue.profile_photo.blank?
      = image_tag 'missing.png'
    - else
      = image_tag @venue.profile_photo.photo.url(:thumb)

  %ul.ch-links
    - @ch_links.each do |link|
      %li= link_to link[:name], link[:path]
.c

- ### ###

.span-18
  %h2= @venue.name
  .subhead= @venue.descr
.span-6.last
  .wrapper
    .center= @venue.city.name
    #cities_show_canvas
.c

- ### ###

- if @ch_gallery.blank?
  .ch-photo
    = image_tag 'logos/400x400/cac.jpg'
- else
  .ch-gallery
    %ul#carousel
      - @ch_gallery.photos.each do |photo|
        %li= image_tag photo.photo.url(:small), :width => 500, :height => 400
.c

- unless @features.blank?
  .four-features
    = render 'application/features', :features => @features[0...Feature.n_features]

- if !@features.blank? && @features.length > Feature.n_features
  .other-features
    - @features[4..@features.length].each do |f|
      .item
        %h5= f.name
        - unless f.subhead.blank?
          .subhead= f.subhead
.c

.venue-footer
  .about
    This is the long gray venue footer.

  %ul.ch-links
    - @ch_links.each do |link|
      %li= link_to link[:name], link[:path]

  %ul.menu
    %li= link_to 'Press Releases', '#'
    %li= link_to 'Careers', '#'
