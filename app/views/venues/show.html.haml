
-##
-## venue/show
-##
- content_for :title do
  = @venue.name

= render 'venues/header', :venue => @venue, :ch_links => @ch_links

.span-18
  %h2= @venue.name
  .subhead= @venue.descr
.span-6.last
  - unless @venue.city.blank?
    .wrapper
      .center= @venue.city.name
      #cities_show_canvas
  - else
    &nbsp;

.c

- ### ###

- if @ch_gallery.blank?
  .ch-photo
    = image_tag 'logos/400x400/cac.jpg'
- else
  .ch-gallery
    %ul#carousel
      - @ch_gallery.photos.each do |photo|
        %li= image_tag photo.photo.url(:small), :width => 500, :height => 400
.c

- unless @features.blank?
  .four-features
    = render 'features/list', :features => @features[0...Feature.n_features]

- if !@features.blank? && @features.length > Feature.n_features
  .other-features
    - @features[4..@features.length].each do |f|
      .item
        %h5= f.name
        - unless f.subhead.blank?
          .subhead= f.subhead
.c

.venue-footer
  .about
    &nbsp;

  %ul.ch-links
    - @ch_links.each do |link|
      %li= link_to link[:name], link[:path]

  %ul.menu
    %li= link_to 'a', '#'
    %li= link_to 'b, '#'
