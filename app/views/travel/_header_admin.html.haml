

#header_main

  = link_to image_expand_down, "javascript:void(0);", :id => 'header_expand'

  .logo= link_to image_ppf, :root

  %ul.menu
    %li= link_to t('g.home'),  :root
  
  #login_register
    - if current_user.blank?
      %ul
        %li= link_to t('users.sign_in'), user_omniauth_authorize_path(:facebook) 
    - else
      %ul
        %li= link_to current_user.email, current_user
        %li= no_user_sign_out_button(current_user)
      