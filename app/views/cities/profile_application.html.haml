    %ul.watch
      %li= link_to 'Events', 'javascript:void(0);'
      %li= link_to 'Places', 'javascript:void(0);'
      %li= link_to 'Photos', 'javascript:void(0);'
      %li= link_to 'Stories', 'javascript:void(0);'
      %li= link_to 'People', 'javascript:void(0);'

    %ul.contribute
      %li= link_to 'Add a Photo', 'javascript:void(0);'
      %li= link_to 'Share a Story', 'javascript:void(0);'

    .clear

.span-24
  = render 'application/features', :features => @features

.span-5
