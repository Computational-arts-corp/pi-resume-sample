
- unless 'users/registrations' == request.filtered_parameters['controller']

  .set-city
    = form_tag '/set_city' do
      = label_tag :current_city, 'Current City:'
      - unless session[:current_city].blank?
        - selected = session[:current_city][:cityname]
      = select :user, :cityname, @list_citynames, :selected => selected
      = submit_tag 'Set City'
