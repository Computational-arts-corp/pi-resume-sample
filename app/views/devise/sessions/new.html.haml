
.center.span-24
  = render 'ads/leaderboard_gray-blue'

.span-24
  .sign-up
    %h2 Sign Up

    %ul
      %li.hide= link_to image_tag('login_with_facebook.png'), 'javascript:void(0);'
      %li
        = link_to 'Create Account', 'javascript:void(0);', :class => :addToggle
        .inline-registration= render 'devise/registrations/new'
    .clear

  .sign-in
    %h2 Sign In

    = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
      .row
        = f.label :email
        %br
        = f.email_field :email

      .row
        = f.label :password
        %br
        = f.password_field :password

      - if devise_mapping.rememberable?
        .row
          = f.check_box :remember_me
          = f.label :remember_me

      .actions= f.submit "Sign In"

.span-12
  &nbsp;
.span-12.last
  = render 'application/disqus'
