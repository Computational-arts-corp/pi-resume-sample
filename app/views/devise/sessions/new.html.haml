
.sign_up
  %h2 Sign Up

  = render "devise/shared/links"

.sign_in
  %h2 Sign In

  = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
    .row
      = f.label :email
      %br
      = f.email_field :email

    .row
      = f.label :password
      %br
      = f.password_field :password

    - if devise_mapping.rememberable?
      .row
        = f.check_box :remember_me
        = f.label :remember_me

    .actions= f.submit "Sign up"


