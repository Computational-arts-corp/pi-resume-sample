
.reports-menu
  %a{ 'data-toggle' => 'dropdown', :class => 'dropdown-toggle' }
    Reports
    %span
  %ul.dropdown-menu
    %li= link_to 'Reports', manager_reports_path
    %li= link_to 'Add New', new_manager_report_path
    %li= link_to 'All Public', manager_reports_all_public_path
    %li= link_to 'no-site', manager_reports_nosite_path
    - if @is_features
      %li.bold
        = link_to 'Features/on', manager_reports_path
        (#{@reports.length})
    - else
      %li= link_to 'Features', manager_feature_reports_path

    - if @is_dones
      %li.bold
        = link_to 'Dones/on', manager_reports_path
        (#{@reports.length})
    - else
      %li= link_to 'Dones', manager_done_reports_path

    - if @is_undones
      %li.bold
        = link_to 'Undones/on', manager_reports_path
        (#{@reports.length})
    - else
      %li= link_to 'Undones', manager_undone_reports_path

    - if @is_untagged
      %li.bold
        = link_to 'Untagged/on', manager_reports_path
        (#{@reports.length})
    - else
      %li= link_to 'Untagged', manager_untagged_reports_path
