
.title
  %h1
    = t('reports.list')
    - unless @city.blank?
      in #{@city.name}
    - unless @this_domain.blank?
      for #{@this_domain}
    = link_to '[+]', new_manager_report_path

%ul.menu
  - if @is_features
    %li.bold= link_to 'Features', manager_reports_path
  - else
    %li= link_to 'Features', manager_feature_reports_path


%ul.menu
  %li
    = form_tag manager_reports_path, :method => :get do
      .field.search_words
        = text_field_tag 'search_words', nil, :placeholder => 'Search Words'
      .actions
        = submit_tag 'Search'
      

= paginate @reports, :param_name => :reports_page
%ol
  - @reports.each do |r|
    %li
      = link_to '[~]', edit_manager_report_path(r)
      = link_to r.name, manager_report_path(r)
      = button_to '[x]', manager_report_path(r), :method => :delete
      - begin
        = image_tag r.photo.photo.url(:thumb)
      - rescue
= paginate @reports, :param_name => :reports_page