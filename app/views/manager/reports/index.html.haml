


%h1
  = t('reports.list')
  - unless @city.blank?
    in #{@city.name}
  = link_to '[+]', new_manager_report_path

%ul.menu
  %li
    = form_tag manager_reports_path, :method => :get do
      .field.search_words
        = text_field_tag 'search_words', nil, :placeholder => 'Search Words'
      .actions
        = submit_tag 'Search'

      - proc do # hidden
        .field.city
          City
          = select :report, :city_id, @cities
        .field
          Tag
          = select :report, :tag_id, @tags
        .field.is_public
          Public
          = check_box_tag 'report[is_public]'
        .field.is_done
          Done
          = check_box_tag 'report[is_done]'
      

= paginate @reports, :param_name => :reports_page

%ol
  - @reports.each do |r|
    %li
      = link_to '[~]', edit_manager_report_path(r)
      = link_to r.name, manager_report_path(r)
      = button_to '[x]', manager_report_path(r), :method => :delete
      - begin
        = image_tag r.photo.photo.url(:thumb)
      - rescue

= paginate @reports, :param_name => :reports_page
Paginated.