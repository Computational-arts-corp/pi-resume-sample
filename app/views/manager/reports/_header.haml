
.title
  %h1
    = t('reports.list')
    - unless @city.blank?
      in #{@city.name}
    - unless @this_domain.blank?
      for #{@this_domain}
    = link_to '[+]', new_manager_report_path

= form_tag manager_reports_path, :method => :get, :class => :search do
  .field.search_words
    [x]
    = text_field_tag 'search_words', params[:search_words], :placeholder => 'Search'
  .actions
    = submit_tag 'Search'
  .c

.c &nbsp;
