

= form_for @report, :url => update_manager_report_path(@report.id) do |f|

  .field.name
    Name
    = f.text_field :name

  .field.name_seo
    Name_seo
    = f.text_field :name_seo
  
  .field.descr
    = f.text_area :descr, :class => 'tinymce'

  .field
    City
    = select :report, :city_id, @cities

  .field
    Tag
    = select :report, :tag_id, @tags

  = f.submit 'Submit'