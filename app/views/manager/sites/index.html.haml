
%h2
  = t('sites.list')
  = link_to '[+]', new_manager_site_path

.items
  - @sites.each do |site|
    .item
      .inner
        = image_tag "flags/#{site.lang}.png"
        = link_to '[~]', edit_manager_site_path(site)
        = link_to site.title, manager_site_path(site)
        = site.domain
        = button_to '[x]', manager_site_path(site), :method => :delete, :confirm => 'Are you sure?'
