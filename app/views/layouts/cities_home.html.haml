
!!!

%html

  %head

    %title= @main_tag.name

    = stylesheet_link_tag    "application", :media => "all"

    = javascript_include_tag "application", "http://w.sharethis.com/button/buttons.js"

    = csrf_meta_tags
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}

  %body{ :id => @action_name }

    .main-header
      .logo= image_tag 'ppf.gif'
      %ul
        %li.people= link_to 'People', users_path
        %li.events= link_to 'Events', events_path
        %li.photos= link_to 'Photos', photos_path
        %li.stories= link_to 'Stories', reports_path

    .container

      = flash[:notice]
      = flash[:error]
      - if alert
        = alert
      - if notice
        = notice
      = yield

    = render 'analytics'

    .main-footer