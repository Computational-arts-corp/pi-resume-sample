
!!!
%html
  %head
    %title= @main_tag.name 
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag :defaults, "application", "http://w.sharethis.com/button/buttons.js"
    = csrf_meta_tags
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
    %link{:href => "/assets/favicon.gif", :rel => "shortcut icon"}
  %body{ :id => @action_name, :class => @action_classes }
    .Lapplication.container
      .content
        = render 'application/header'

        .center= render 'ads/links_horizontal_large'

        - if flash[:notice]
          .notice= flash[:notice]
        - if flash[:error]
          .error= flash[:error]
        .clear

        = yield :left
        = yield :right
        = yield

        .clear
      = render 'application/footer'

    = render "analytics/#{@domain}"
    = render 'init_maps'
