!!!
%html
  %head
    %title= @main_tag.name 
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag :defaults, "application", "http://w.sharethis.com/button/buttons.js"
    = csrf_meta_tags
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
  %body{ :id => @action_name, :class => @action_classes }

    .Lapplication

      = render 'application/header'
      .container

        - if flash[:notice]
          .notice= flash[:notice]
        - if flash[:error]
          .error= flash[:error]

        = yield :left
        = yield :right
        = yield

      .clear
      = render 'application/footer'

    // below, no appearance
    - if Rails.env.test?
    - elsif Rails.env.development?
    - elsif !@site.domain.blank?
      = render "analytics/#{@site.domain}"
    - else
      = render 'analytics/piousbox.com'
    = render 'init_maps'