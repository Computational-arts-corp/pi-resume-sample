
!!!
%html
  %head
    %title= @main_tag.name 
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag :defaults, "application", "http://w.sharethis.com/button/buttons.js"
    = csrf_meta_tags
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
    %link{:href => "/assets/favicon.gif", :rel => "shortcut icon"}
  %body{ :id => @action_name, :class => @action_classes }
    .Lapplication.container
      .content
        = render 'application/header'

      
        - if flash[:notice]
          .notice= flash[:notice]
        - if flash[:error]
          .error= flash[:error]

        .clear
        = render 'ads/leaderboard'

        .span-24.features
          - @features.each do |feature|
            .item
              .wrapper
                %h3= feature[:name]
                = link_to image_tag( feature[:image_path] ), feature[:link_path]
                .descr= feature[:subhead]
                = link_to 'Read More', feature[:link_path]
                .clear

        .span-12
          = yield :left

        .span-12.last
          = yield :right

        .span-24
          = yield

        .home-footer
        .clear
      = render 'application/footer'

    = render "analytics/#{@domain}"
    = render 'init_maps'
