
!!!
%html
  %head
    %title
      = yield(:title)
      ISh Manager
    = stylesheet_link_tag "manager"
    = javascript_include_tag :defaults, "application", 'http://w.sharethis.com/button/buttons.js'
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}

  %body{ :id => @action_name, :class => @action_classes }
    .ids
    .Lmanager
      .container

        #content
          - if notice
            %p.notice= notice
          - if alert
            %p.alert= alert
          - if flash[:error]
            %p.alert= flash[:error]

          = yield

      = render 'manager/footer'

    = render 'analytics/piousbox.com'

