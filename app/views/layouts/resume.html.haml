
!!!
%html
  %head
    %title
      = t('users.resume')
      = @user.username
    = stylesheet_link_tag "resume"
    = javascript_include_tag "application"
    = csrf_meta_tags

  %body{ :id => @action_name, :class => params[:locale] }
    #header
      = link_to image_tag('logos/45x45/ish.png'), 'http://computationalartscorp.com'

      %h2
        .hide= link_to @user.username.capitalize, user_resume_path(@user.username)
        = link_to @user.name, user_resume_path(@user.username)
      

      %ul#main_nav
        %li
          = link_to t('users.resume'), user_resume_path(@user.username), :class => :resume_link
        %li
          = link_to 'Github', @user.github_path, :class => :github_link
        %li
          = link_to t('list.articles'), user_reports_path(@user.username), :class => :reports_link
        %li
          = link_to t('list.galleries'), user_galleries_path(@user.username), :class => :galleries_link


      %ul#user-menu
        - if user_signed_in?
          %li
            = link_to t('users.organizer'), organizer_path
          
          %li.last
            = link_to t('users.logout'), :destroy_user_session, :method => :delete
        - else
          %li.last
            = link_to t('users.login'), new_user_session_path
    #content
      .holder
        = yield
    #footer
      %ul#footer-nav
        %li
          = link_to t('g.about'), 'http://computationalartscorp.com'
        - if user_signed_in?
          %li
            = link_to @user.username.capitalize, account_path
          %li.last
            = link_to t('users.logout'), destroy_user_session_path
        - else
          %li.last
            = link_to t('users.login'), new_user_session_path

      
      
      .center.clear
        .height-20
        = render 'ads/leaderboard_gray'


