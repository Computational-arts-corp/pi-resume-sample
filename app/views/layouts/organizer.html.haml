
!!!
%html{ :lang => @locale }
  %head
    %title
      = yield(:title)
      Organizer
    
    = stylesheet_link_tag "organizer"

    = javascript_include_tag "application", 'http://w.sharethis.com/button/buttons.js'

    = csrf_meta_tags

    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
    %link{:href => "/assets/favicon.gif", :rel => "shortcut icon"}
  %body{ :id => @action_name, :class => @action_classes }
    .Lorganizer

      = render 'organizer/header'
      = render 'organizer/scratchpad'
      = render 'organizer/extended_forms'

      .clear
      = yield :left
      = yield :right
      = yield

      = render 'footer'

    // below, no appearance
    - if Rails.env.test?
    - elsif Rails.env.development?
    - elsif !@site.domain.blank?
      = render "analytics/#{@site.domain}"
    - else
      = render 'analytics/annesque.com'
    = render 'init_maps'
