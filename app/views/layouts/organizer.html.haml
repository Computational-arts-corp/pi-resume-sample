
!!!
%html{ :lang => @parsed_locale }
  %head
    %title
      = yield(:title)
      Organizer
    
    = stylesheet_link_tag "organizer"
    = javascript_include_tag "application"
    = csrf_meta_tags

    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}

  %body{ :id => @parsed_action }
    // below, L for layout
    .Lmobile#piousbox_layout

      #header
        %h1= @current_user.email
        = image_tag 'logos/organizer.png'

        %ul.user_menu
          %li.profile
            %a{:href => '#'} profile preview
          %li.setting
            = link_to 'Settings', account_path
        %h4= @current_user.email

      #content_main
        - if notice
          %p.notice= notice
        - if alert
          %p.alert= alert

        = yield

    = render 'analytics'
