
!!!
%html{ :lang => @locale }
  %head
    %title
      = yield(:title)
      Organizer
    
    = stylesheet_link_tag "organizer"
    = javascript_include_tag :defaults
    = javascript_include_tag "application", 'http://w.sharethis.com/button/buttons.js'
    = csrf_meta_tags

    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}

  %body{ :id => @action_name }
    .Lorganizer

      = render 'organizer/header'

      .clear
      = yield

      = render 'footer'

    = render 'analytics'
