
!!!
%html{ :lang => @parsed_locale }
  %head
    %title
      = yield(:title)
      Organizer
    
    = stylesheet_link_tag "organizer"
    = javascript_include_tag "application"
    = csrf_meta_tags

    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}

  %body{ :id => @action_name }
    // below, L for layout
    .Lmobile#piousbox_layout

      #header
        = link_to image_tag('logos/organizer.png'), organizer_path
        - if @current_user.blank?
          You are not logged in.
        - else
          %h1= @current_user.email

          - if @current_user.profile_photo
            = image_tag @current_user.profile_photo.photo.url(:thumb)
          - else
            = link_to image_missing, new_photo_path

          %ul.user_menu
            %li.profile
              = link_to 'My Resume', user_resume_path(@current_user[:username])
            %li.setting
              = link_to 'Settings', account_path
        

      #content_main
        - if notice
          %p.notice= notice
        - if alert
          %p.alert= alert

        .clear
        = yield

      #footer
        %ul.menu
          %li= link_to 'About', about_path
          %li= link_to image_logout, :destroy_user_session, :method => :delete, :class => :logout

    = render 'analytics'
